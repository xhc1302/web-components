    padding 16px 16px 6px !important
    color #AFB1B1
    font-size 14px
    text-align center
    line-height 20px

  .ant-modal-footer
    border-top none

  .z-modal-notice-footer
    display flex
    justify-content center
    align-items center
    padding 16px 0

