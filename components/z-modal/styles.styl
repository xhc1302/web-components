      padding: 0 8px

    .cancel-active
      color #14A9FF

    .submit-item
      color #14A9FF

  .z-modal-icon-close
    display inline-block
    width 16px
    height 16px

    img
      width 100%
      height 100%
      object-fit cover

.z-modal-notice
  .ant-modal-header
    border-bottom none
    text-align center

