@keyframes spin
  from
    transform rotate(0)

  to
    transform rotate(360deg)

@keyframes progress
  0%
    content '3%'

  10%
    content '12%'

  30%
    content '45%'

  70%
    content '89%'

  95%
    content '96%'

  100%
    content '96%'

.download-wrapper
  display inline-block

.modal-download
  position fixed
  display flex
  justify-content center
  align-items center
  top 0
  left 0
  width 100vw
  height 100vh
  z-index 1001
  background transparent

  .modal-inner
    position relative
    width 124px
    height 124px
    border-radius 16px
    background rgba(0, 0, 0, 0.7)

    .download-loading
      position relative
      margin 16px auto 8px
      width 64px
      height 64px
      background url('data:image/png;base64,') no-repeat center
      background-size cover

      &:after
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        animation spin 1.5s linear infinite
        background url('data:image/png;base64,') no-repeat center
        background-size cover

    &>p
      margin-top 8px
      color #fff
      font-size 14px
      line-height 20px
      text-align center

      &:after
        content ''
        animation progress 1.5s linear forwards
