  .header-company
    display flex
    align-items center
    padding 0 24px

    .company-logo
      margin-right 12px
      width 32px
      height 32px
      overflow hidden
      border-radius 50%
      line-height 1

      &>img
        width 100%
        height 100%
        object-fit cover

    .company-name
      font-size 24px
      line-height 30px
      font-family hanti

  .header-main
    flex 1

