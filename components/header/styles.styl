    .login-user
      display flex
      align-items center
      padding-bottom 16px
      cursor pointer

    .download-file
      color #afb1b1
      font-size 14px
      cursor pointer
      margin-left 24px
      margin-right 24px
      display flex
      align-items center
      padding-bottom 16px

      img
        width 16px
        height 16px
        object-fit cover
        margin-right 4px

    .message-wrapper
      color #afb1b1
      font-size 14px
      cursor pointer
      margin-right 24px
      display flex
      align-items center
      padding-bottom 16px
      position relative

      .message-count
        position absolute
        top -6px
        left 6px
        background #F53F3F
        border-radius 8px
        border 1px solid #EBECEC
        color #FFFFFF
        font-size 12px
        padding 0 6px
        line-height 12px

      img
        width 16px
        height 16px
        object-fit cover
        margin-right 4px

    .user-avatar
      width 32px
      height 32px
      object-fit cover
      border-radius 100%

    .user-name-wrapper
      display inline-flex
      align-items center

    .user-name
      margin 0 4px 0 8px
      max-width 100px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      color #AFB1B1

